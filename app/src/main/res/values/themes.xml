<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ImageToText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3D5663</item>
        <item name="colorPrimaryDark">#3D5663</item>
        <item name="colorAccent">#3D5663</item>
    </style>
    <style name="Theme.ImageToText.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>
    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="AdsButtonShapeAppearance">
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
    </style>

    <style name="AdsButtonShapeMediumAppearance">
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>
    <style name="AdsButtonStyleMedium" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/appColor</item>
        <item name="rippleColor">@color/appColor</item>
        <item name="shapeAppearance">@style/AdsButtonShapeMediumAppearance</item>
    </style>
    <style name="AdsButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/appColor</item>
        <item name="rippleColor">@color/appColor</item>
        <item name="shapeAppearance">@style/AdsButtonShapeAppearance</item>
    </style>
    <string name="ad_attribution">Ad</string>
</resources>
